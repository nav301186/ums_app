<form class="reg-log">
  <div class="form-group">
      {{input type="email" class="form-control" value = user.email placeholder="Enter email"}}
      {{input type="password" class="form-control no-border-radius blue-border" value = user.password  placeholder="Password"}}
      {{input type="username" class="form-control no-border-radius blue-border" value = user.username   placeholder="Username"}}
  </div>
</form>
